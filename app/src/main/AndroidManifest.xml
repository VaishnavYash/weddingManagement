<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="yash.com.example.weddingManagement">

    <uses-permission android:name="ANDROID.PERMISSION.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/icon_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.weddingManagement"
        tools:targetApi="31">
        <activity
            android:name="yash.com.example.weddingManagement.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.weddingManagement.NoActionBar" />
        <activity
            android:name="yash.com.example.weddingManagement.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.weddingManagement" />
        <activity
            android:name="yash.com.example.weddingManagement.FirstActivity"
            android:exported="false"
            android:theme="@style/Theme.weddingManagement.NoActionBar" />
        <activity
            android:name="yash.com.example.weddingManagement.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.weddingManagement.NoActionBar" />
        <activity
            android:name="yash.com.example.weddingManagement.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.weddingManagement.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>